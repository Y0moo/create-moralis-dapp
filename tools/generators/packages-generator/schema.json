{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "packages-generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the package?"
    }
  },
  "required": ["name"]
}
